{
  "name": "Leafs Coaching Tree",
  "engine": "coaching_tree",
  "version": "1.0",
  "description": "Defines NHL 25-only tactical options and coaching rules for gameplans: base systems, score/time adjustments, and special teams behaviour.",

  "meta": {
    "game": "NHL 25",
    "platform": "Xbox Cloud (Series X|S build)",
    "canon_version": "v1.0-NHL25-SystemsOnly"
  },

  "systems": {
    "forecheck": {
      "allowed_values": [
        "1-2-2 Passive",
        "1-2-2 Aggressive",
        "2-3",
        "Weak Side Lock"
      ],
      "defaults": {
        "standard_even": "1-2-2 Passive",
        "vs_fast_rush_teams": "2-3",
        "vs_slow_D_teams": "1-2-2 Aggressive"
      }
    },

    "neutral_zone": {
      "allowed_values": [
        "1-2-2 Red",
        "1-2-2 Blue",
        "1-3-1",
        "1-4"
      ],
      "defaults": {
        "standard_even": "1-2-2 Red",
        "vs_elite_rush_C": "1-3-1",
        "protecting_lead": "1-4"
      }
    },

    "defensive_pressure": {
      "allowed_values": [
        "Protect Net",
        "Contain Puck",
        "Normal",
        "Puck Side Attack",
        "High Pressure"
      ],
      "defaults": {
        "standard_even": "Contain Puck",
        "protecting_lead": "Protect Net",
        "when_trailing": "Puck Side Attack"
      }
    },

    "defensive_strategy": {
      "allowed_values": [
        "Collapsing",
        "Staggered",
        "Tight Point"
      ],
      "defaults": {
        "vs_slot_driven_teams": "Collapsing",
        "vs_low_to_high_teams": "Staggered",
        "vs_point_bomb_teams": "Tight Point"
      }
    },

    "offensive_strategy": {
      "allowed_values": [
        "Defend Lead",
        "Conservative",
        "Standard",
        "Aggressive",
        "Full Attack"
      ],
      "defaults": {
        "start_game": "Standard",
        "protecting_lead": "Conservative",
        "chasing_game": "Aggressive"
      }
    },

    "control_breakout": {
      "allowed_values": [
        "Strong Side Slant",
        "Blue Dots",
        "3 High"
      ],
      "defaults": {
        "standard_even": "Strong Side Slant",
        "vs_heavy_forecheck": "3 High",
        "vs_passive_forecheck": "Blue Dots"
      }
    },

    "quick_breakout": {
      "allowed_values": [
        "Stay Wide",
        "Leave Zone Early",
        "Close Support"
      ],
      "defaults": {
        "standard_even": "Close Support",
        "vs_slow_D_teams": "Leave Zone Early",
        "vs_trap_teams": "Stay Wide"
      }
    },

    "trap_forecheck_slider": {
      "range": [0, 6],
      "description": "0 = full neutral-zone trap, 6 = max forecheck pressure.",
      "defaults": {
        "standard_even": 3,
        "protecting_lead": 1,
        "chasing_game": 5
      }
    }
  },

  "offense": {
    "entry_rules": {
      "vs_slow_defense": "prefer_carry_entries",
      "vs_fast_gap_D": "mix_carry_and_dump",
      "vs_trap_teams": "use_chip_and_chase_with_support"
    },
    "cycle_rules": {
      "default_focus": "low_cycle_then_high_shot",
      "vs_small_D": "heavy_net_drives",
      "vs_slow_D": "lateral_puck_movement_then_shot"
    },
    "shooting_rules": {
      "default": "shoot_from_slot_and_traffic",
      "vs_weak_rebound_goalie": "shoot_for_pads_and_crash",
      "vs_good_rebound_goalie": "pick_corners_in_stride"
    }
  },

  "defense": {
    "rush_defense": {
      "vs_elite_speed_C": "early_gap_and_angle_outside",
      "vs_wingers_with_one_timers": "deny_middle_and_stick_on_shooter",
      "vs_heavy_net_drivers": "box_out_early_and_clear_rebounds"
    },
    "in_zone": {
      "wall_rules": "pin_and_support_on_puck_side",
      "slot_rules": "protect_middle_first_then_points",
      "switching_rules": "switch_on_pick_only_if_called"
    }
  },

  "special_teams": {
    "powerplay": {
      "pp1": {
        "base_formation": "1-3-1",
        "principles": [
          "use_bumper_as_release",
          "attack_royal_road_seam",
          "netfront_screen_on_every_point_shot"
        ]
      },
      "pp2": {
        "base_formation": "Umbrella",
        "principles": [
          "rotate_high_triangle",
          "funnel_pucks_from_top_with_traffic"
        ]
      }
    },

    "penalty_kill": {
      "pk1": {
        "base_shape": "Box",
        "usage": "start_of_penalty_and_faceoffs",
        "principles": [
          "stick_in_lane_first",
          "force_pucks_to_perimeter",
          "clear_middle_on_rebounds"
        ]
      },
      "pk2": {
        "base_shape": "Diamond",
        "usage": "vs_high_point_shooters_or_umbrella",
        "principles": [
          "pressure_point_shooter_early",
          "collapse_to_slot_after_second_pass"
        ]
      }
    }
  },

  "adjustments": {
    "when_leading": {
      "by_one_goal": {
        "offensive_strategy": "Conservative",
        "defensive_pressure": "Contain Puck",
        "trap_forecheck_slider": 2,
        "neutral_zone": "1-2-2 Red"
      },
      "by_two_or_more": {
        "offensive_strategy": "Defend Lead",
        "defensive_pressure": "Protect Net",
        "trap_forecheck_slider": 1,
        "neutral_zone": "1-4"
      }
    },

    "when_trailing": {
      "down_one_goal": {
        "offensive_strategy": "Aggressive",
        "forecheck": "1-2-2 Aggressive",
        "trap_forecheck_slider": 4
      },
      "down_two_or_more": {
        "offensive_strategy": "Full Attack",
        "forecheck": "1-2-2 Aggressive",
        "trap_forecheck_slider": 5,
        "notes": [
          "D activate more often but keep one safety high.",
          "Shorten bench selectively."
        ]
      }
    },

    "time_based": {
      "last_five_minutes_protecting_lead": {
        "forecheck": "1-2-2 Passive",
        "neutral_zone": "1-4",
        "defensive_pressure": "Protect Net",
        "offensive_strategy": "Defend Lead",
        "trap_forecheck_slider": 1
      },
      "last_five_minutes_chasing": {
        "forecheck": "1-2-2 Aggressive",
        "neutral_zone": "1-2-2 Red",
        "defensive_pressure": "Puck Side Attack",
        "offensive_strategy": "Full Attack",
        "trap_forecheck_slider": 5
      }
    }
  }
}