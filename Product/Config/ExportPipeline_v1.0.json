{
  "version": "1.0",
  "export_defaults": {
    "game_report_mode": "full",
    "include_play_by_play": true,
    "include_shift_data": true,
    "include_advanced_stats": true,
    "include_strategy_triggers": true,
    "include_goalie_decision_notes": true,
    "include_chemistry_notes": true
  },
  "paths": {
    "gameplan": {
      "directory": "Exports/Gameplans/",
      "template": "Templates/BaseGameplanTemplate.json",
      "filename": "{OPPONENT}_{DATE}_Gameplan.json"
    },
    "matchup": {
      "directory": "Exports/Matchups/",
      "template": "Templates/BaseMatchupTemplate.json",
      "filename": "{OPPONENT}_{DATE}_Matchup.json"
    },
    "game_report": {
      "directory": "Exports/GameReports/",
      "template": "Templates/GameReportTemplate.json",
      "filename": "{OPPONENT}_{DATE}_GameReport.json"
    },
    "runtime_snapshot": {
      "directory": "Exports/Runtimes/",
      "template": "Templates/RuntimeSnapshotTemplate.json",
      "filename": "{VERSION}_{DATE}_{SOURCE}.json"
    }
  }
}